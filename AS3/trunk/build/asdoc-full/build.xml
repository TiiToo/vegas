<?xml version="1.0" encoding="UTF-8"?>

<project name="VEGAS AS3 / Reference with ASDoc" default="main">

    <!-- Initialize the build -->
    
    <property file="./build.properties" />
    
    <taskdef resource="net/sf/antcontrib/antcontrib.properties">
        <classpath>
            <pathelement location="../ant/lib/ant-contrib/ant-contrib-1.0b3.jar"/>
        </classpath>
    </taskdef>
    
    <if>
        <equals arg1="${asdoc.use.classes}" arg2="true" />
        <then>
            <property name="asdoc.sources" value="-doc-classes ${asdoc.doc.sources}" />
        </then>
        <else>
            <property name="asdoc.sources" value="-doc-sources ${asdoc.doc.sources}" />
        </else>
    </if>
    
    <!-- Build process -->
    
    <target name="main" depends="clean,doc" description="Clean documentation and create all VEGAS reference."/>
    
    <target name="clean" description="Cleans all ASDocs">
        <delete dir="${asdoc.output}" />
        <mkdir  dir="${asdoc.output}" />
    </target>
    
    <target name="doc" depends="clean">
        <exec executable="${asdoc}" failonerror="true" >
            
            <arg line="-external-library-path+=${library.core}" />
            <arg line="-external-library-path+=${library.system}" />
            <arg line="-external-library-path+=${library.graphics}" />
            
            <arg line='-doc-sources+=${sources.vegas}'/>
            
            <arg line='-main-title ${asdoc.main.title}' />
            <arg line='-window-title ${asdoc.win.title}' />
            
            <arg line='-output ${asdoc.output}' />
            <arg line='-templates-path ${asdoc.template}'/>
            
            <arg line='-target-player=${target.player}' />
        </exec>
    </target>

</project>
