<?xml version="1.0" encoding="UTF-8"?>

<project name="VEGAS AS3 / Build all libraries" default="main">
    
    <property file="./build.properties"/>
    
    <target name="main" depends="vegas-only,vegas-standalone,vegas,copy" description="Creates all swc libraries of VEGAS"/>
    
    <target name="vegas-only">
         <subant target="">
             <fileset dir="./vegas-only" includes="build.xml"/>
         </subant>
    </target>
    
    <target name="vegas-standalone">
         <subant target="">
             <fileset dir="./vegas-standalone" includes="build.xml"/>
         </subant>
    </target>
    
    <target name="vegas">
         <subant target="">
             <fileset dir="vegas" includes="build.xml"/>
         </subant>
    </target>
    
    <target name="copy">
        <copy todir="${copy.todir.maashaack}" overwrite="true">
            <fileset file="${copy.from.core}" />
        </copy>
        <copy todir="${copy.todir.maashaack}" overwrite="true">
            <fileset file="${copy.from.system}" />
        </copy>
        <copy todir="${copy.todir.maashaack}" overwrite="true">
            <fileset file="${copy.from.graphics}" />
        </copy>
        <copy todir="${copy.todir.maashaack}" overwrite="true">
            <fileset file="${copy.from.maashaack}" />
        </copy>
        <copy todir="${copy.todir.ninjas}" overwrite="true">
            <fileset file="${copy.from.ninpo}" />
        </copy>
    </target>
    
</project>
