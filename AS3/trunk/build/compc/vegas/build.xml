<?xml version="1.0" encoding="UTF-8"?>

<project name="VEGAS AS3 / All sources, dependencies and extensions" default="main">
    
    <property file="./build.properties"/>
    
    <target name="main">
        
        <exec executable="${compc}" >
            
            <arg line="-load-config+=${config}" />
            
            <arg line='-external-library-path+="${project}/dependencies/air"'/>
            
            <arg line="-include-libraries+=${library.maashaack}" />
            
            <arg line="-source-path+=${sources.vegas}" />
            <arg line="-source-path+=${sources.lunas}" />
            <arg line="-source-path+=${sources.calista}" />
            
            <arg line="-output=${output}" />
            
        </exec>
        
    </target>
    
</project>
