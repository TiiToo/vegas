        <uri>http://code.google.com/p/calista/2009</uri>
        <uri>http://code.google.com/p/kron-os/2009</uri>
                
    </include-namespaces>
    
    <directory>false</directory>

    <output>deploy/vegas.swc</output>
    
    <metadata>
        
        <title>The AS3 VEGAS framework - version 1</title>
        <description>All class of VEGAS and this extensions</description>
        <publisher>http://www.ekameleon.net</publisher>
        <creator>Marc ALCARAZ (aka eKameleon)</creator>
        <language>EN</language>
    
    </metadata>

