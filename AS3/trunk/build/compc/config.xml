<?xml version="1.0" encoding="utf-8"?>

<flex-config>
    <compiler>
        <source-path>
            <path-element>../../src/</path-element>
        </source-path>
        
        <namespaces>
            <namespace>
                <uri>http://code.google.com/p/core/2011</uri>
                <manifest>./manifests/maashaack/core_manifest.xml</manifest>
            </namespace>
            <namespace>
                <uri>http://code.google.com/p/system/2011</uri>
                <manifest>./manifests/maashaack/system_manifest.xml</manifest>
            </namespace>
            <namespace>
                <uri>http://code.google.com/p/graphics/2011</uri>
                <manifest>./manifests/maashaack/graphics_manifest.xml</manifest>
            </namespace>
            <namespace>
                <uri>http://code.google.com/p/vegas/2011</uri>
                <manifest>./manifests/vegas_manifest.xml</manifest>
            </namespace>
            <namespace>
                <uri>http://code.google.com/p/lun-as/2011</uri>
                <manifest>./manifests/lunas_manifest.xml</manifest>
            </namespace>
            <namespace>
                <uri>http://code.google.com/p/calista/2011</uri>
                <manifest>./manifests/calista_manifest.xml</manifest>
            </namespace>
        </namespaces>
        
        <strict>true</strict>
        <optimize>true</optimize>
        
       <define append="true"> 
           <name>CONFIG::release</name>
           <value>true</value> 
       </define> 
       <define append="true"> 
           <name>CONFIG::debugging</name> 
           <value>false</value> 
       </define>
       <define append="true"> 
           <name>API::FLASH</name> 
           <value>true</value> 
       </define>
       <define append="true"> 
           <name>API::REDTAMARIN</name> 
           <value>false</value> 
       </define>
       
    </compiler>
    
    <include-namespaces>
        <uri>http://code.google.com/p/core/2011</uri>
        <uri>http://code.google.com/p/system/2011</uri>
        <uri>http://code.google.com/p/graphics/2011</uri>
        <uri>http://code.google.com/p/vegas/2011</uri>
        <uri>http://code.google.com/p/lun-as/2011</uri>
        <uri>http://code.google.com/p/calista/2011</uri>
    </include-namespaces>
    
    <target-player>10.2</target-player>
    
    <directory>false</directory>
    
    <output>../../libs/vegas.swc</output>
    
    <metadata>
        <title>The AS3 VEGAS framework</title>
        <description>All class of VEGAS and this extensions</description>
        <publisher>http://www.ekameleon.net</publisher>
        <creator>Marc ALCARAZ (aka eKameleon) - ekameleon@gmail.com</creator>
        <language>EN</language>
    </metadata>

</flex-config>
