            <path-element>../../src/</path-element>
        </source-path>
        
        <namespaces>
        
            <namespace>
                <uri>http://code.google.com/p/maashaack/2009</uri>
                <manifest>./manifests/system_manifest.xml</manifest>
            </namespace>        
            
            <namespace>
                <uri>http://code.google.com/p/vegas/2009</uri>
                <manifest>./manifests/vegas_manifest.xml</manifest>
            </namespace>
            
            <namespace>
                <uri>http://code.google.com/p/andromed-as/2009</uri>
                <manifest>./manifests/andromeda_manifest.xml</manifest>
            </namespace>            

            <namespace>
                <uri>http://code.google.com/p/pegas/2009</uri>
                <manifest>./manifests/pegas_manifest.xml</manifest>
            </namespace>         

            <namespace>
                <uri>http://code.google.com/p/as-gard/2009</uri>
                <manifest>./manifests/asgard_manifest.xml</manifest>
            </namespace>  
            
            <namespace>
                <uri>http://code.google.com/p/lun-as/2009</uri>
                <manifest>./manifests/lunas_manifest.xml</manifest>
            </namespace>             
            
            <namespace>
                <uri>http://code.google.com/p/calista/2009</uri>
                <manifest>./manifests/calista_manifest.xml</manifest>
            </namespace>
                        
            <namespace>
                <uri>http://code.google.com/p/kron-os/2009</uri>
                <manifest>./manifests/kronos_manifest.xml</manifest>
            </namespace>              
            
        </namespaces>

        <strict>true</strict>
        <optimize>true</optimize>

    </compiler>
    
    <include-namespaces>
        
        <uri>http://code.google.com/p/maashaack/2009</uri>
        
        <uri>http://code.google.com/p/vegas/2009</uri>
        
        <uri>http://code.google.com/p/andromed-as/2009</uri>
        <uri>http://code.google.com/p/pegas/2009</uri>
