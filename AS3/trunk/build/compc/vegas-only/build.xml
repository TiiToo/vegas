<?xml version="1.0" encoding="UTF-8"?>

<project name="VEGAS AS3 / Only sources without dependency" default="main">
    
    <property file="./build.properties"/>
    
    <target name="main" depends="compc" />
    
    <target name="compc">
        <exec executable="${compc}" >
            
            <arg line="-load-config+=${config}" />
            
            <arg line="-external-library-path+=${library.core}" />
            <arg line="-external-library-path+=${library.eden}" />
            <arg line="-external-library-path+=${library.system}" />
            <arg line="-external-library-path+=${library.graphics}" />
            
            <arg line="-source-path+=${sources.vegas}" />
            
            <arg line="-output=${output}" />
            
        </exec>
    </target>
    
</project>
