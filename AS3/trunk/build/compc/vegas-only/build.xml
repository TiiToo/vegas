<?xml version="1.0" encoding="UTF-8"?>

<project name="VEGAS AS3 / Only sources without dependency" default="main">
    
    <property file="./build.properties"/>
    
    <target name="main" depends="compc,copy" />
    
    <target name="compc" depends="copy" >
        <exec executable="${compc}" >
            <arg line="-load-config+=${config}" />
            
            <arg line="-external-library-path+=${library.core}" />
            <arg line="-external-library-path+=${library.system}" />
            <arg line="-external-library-path+=${library.graphics}" />
            
            <arg line="-source-path+=${sources.vegas}" />
            
            <arg line="-output=${output}" />
        </exec>
    </target>
    
    <target name="copy">
        <copy todir="${copy}" overwrite="true">
            <fileset file="${library.core}" />
        </copy>
        <copy todir="${copy}" overwrite="true">
            <fileset file="${library.system}" />
        </copy>
        <copy todir="${copy}" overwrite="true">
            <fileset file="${library.graphics}" />
        </copy>
        <copy todir="${copy}" overwrite="true">
            <fileset file="${library.maashaack}" />
        </copy>
    </target>
    
</project>
