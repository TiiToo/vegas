   {                                return Boolean( code && cur ) ;                            }                            return false ;                        }                    }                    return true ;                }            }            return false ;        }        //        /**//         * Remove the specified BOM in the passed-in ByteArray reference.//         *///        public static function removeBOM( byte:ByteArray , bom:BOM ):Boolean//        {//            var b:Boolean ;//            if ( byte != null && containsBOM( byte, bom ) )//            {//                var values:Array  = bom.valueOf() as Array ;//                var endian:String = byte.endian ;//                //                byte.position = 0 ;//                byte.endian   = Endian.LITTLE_ENDIAN ;//                //                byte.writeBytes( byte , 0 , byte.length - ( values != null ? values.length : 0 ) ) ;//                //                byte.endian = endian ;//                //                return true ;//            }//            return b ;//        }    }}