configuration =
{
    config :
    {
		lang    : "fr" ,
        display :
        {
            filters : [ new flash.filters.DropShadowFilter(4,90,0x000000,0.6,8,8,1,3) ] ,
            format  : new flash.text.TextFormat('arial', 12, 0xFFFFFF) 
        }
        ,
        pseudo  : "JohnDoe" 
    }
    ,
    defaultInitMethod    : "initialize" ,
    defaultDestroyMethod : "destroy"    ,
    identify             : true         ,
    ,
	locale               :
	{
        pattern : "Hello {0}"
	}
	,
    typePolicy           : "all"        ,
    typeAliases          : 
    [
        { alias:"TextField" , type:"flash.text.TextField" } ,
        { alias:"User"      , type:"test.User"            } 
    ]
    ,
    typeExpression       :
    [
        { name : "display" , value : "asgard.display" }
    ]        
} ;

imports =
[
	
	{ ressource : "fr"        , type:"i18n"    , prefix   : "localize_" , path:"locale/" , suffix:".eden" } ,
	{ ressource : "en"        , type:"i18n"    , prefix   : "localize_" , path:"locale/" , suffix:".eden"  } , 
	{ ressource : "config"    , type:"config"  , fileName : "config"    , path:"config/" , suffix:".eden"  } , 	
    
    { ressource : "view.eden" , type:"context"  }
    
] ;

objects =
[
    {
        id        : "user" ,
        type      : "User" ,            
        singleton : true   ,
        arguments : [ { config : "pseudo" } ]
    }
] ;