oint(10,10) ;                protected function enterFrame( e:Event ):void        {            if ( key.isDown( Keyboard.LEFT ) )            {                ball.x -= speed.x ;            }                        if ( key.isDown( Keyboard.RIGHT ) )            {                ball.x += speed.x ;            }                        if ( key.isDown( Keyboard.UP ) )            {                ball.y -= speed.y ;            }                        if ( key.isDown( Keyboard.DOWN ) )            {                ball.y += speed.y ;            }        }    }}