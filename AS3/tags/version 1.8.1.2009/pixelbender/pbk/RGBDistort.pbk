<languageVersion : 1.0;>

kernel RGBDistort
<   
    namespace   : "graphics.filters";
    vendor      : "ALCARAZ Marc (eKameleon)";
    version     : 1 ;
    description : "Distorts all RGB pixels." ;
>
{
    /**
     * Specify the direction of the effect.
     */
    parameter float3 direction
    <
        minValue     : float3( -1.0 , -1.0 , -1.0 ) ;
        maxValue     : float3(  1.0 ,  1.0 ,  1.0 ) ;
        defaultValue : float3( -1.0 ,  0.0 ,  1.0 ) ;
    >;
    
    /**
     * Specify the frequency of the effect.
     */
    parameter float3 frequency
    <
        minValue     : float3( 0.0 , 0.0 , 0.0 ) ;
        maxValue     : float3( 1.0 , 1.0 , 1.0 ) ;
        defaultValue : float3( 0.1 , 0.1 , 0.1 ) ;
    >;
    
    /**
     * Specify the intensity of the effect.
     */
    parameter float3 intensity
    <
        minValue     : float3(  0.0 , 0.0 , 0.0 ) ;
        maxValue     : float3(  1.0 , 1.0 , 1.0 ) ;
        defaultValue : float3(  0.5 , 0.0 , 0.7 ) ;
    >;
    
    input  image4 source ;
    output pixel4 result ;

    void evaluatePixel()
    {
        float2 pos = outCoord();
        
        result = sampleLinear( source , pos ) ;
        
        float3 ratio = intensity * 10.0 ;
        
        float2 dR = float2( pos.x - ( ratio.r * direction.r ) + ( sin( pos.y * frequency.r ) * ratio.r ) , pos.y ) ;
        float2 dG = float2( pos.x - ( ratio.g * direction.g ) + ( sin( pos.y * frequency.g ) * ratio.g ) , pos.y ) ;
        float2 dB = float2( pos.x - ( ratio.b * direction.b ) + ( sin( pos.y * frequency.b ) * ratio.b ) , pos.y ) ;
        
        pixel4 red   = sampleLinear( source , dR ) ;
        pixel4 green = sampleLinear( source , dG ) ;
        pixel4 blue  = sampleLinear( source , dB ) ;
        
        result.r = red.r   ;
        result.g = green.g ;
        result.b = blue.b  ;
        result.a = clamp( red.a + green.a + blue.a , 0.0 , 1.0 );
    }
}