    * The ReflectionBitmapData class.     * <p><b>Example :</b></p>     * <pre class="prettyprint">     * import graphics.display.ReflectionBitmapData ;     *      * import flash.display.Bitmap       ;     * import flash.display.BitmapData   ;     *      * // MyBitmapData is a linked symbol in the swf.      *      * var reflect:BitmapData = new ReflectionBitmapData( new MyBitmapData(0,0) , 0.3) ;     *      * var bitmap:Bitmap = new Bitmap( reflect ) ;     *      * bitmap.x = 25 ;     * bitmap.y = 25 ;     *      * addChild( bitmap ) ;     * </pre>     */    public class ReflectionBitmapData extends BitmapData    {        /**         * Creates a new ReflectionBitmapData instance of the passed-in BitmapData and add in the view a transparent reflection effect.         * @param bitmap The IBitmapDrawable object to transform (DisplayObject or BitmapData).         * @param alpha A value between 0 and 1 to defines the alpha ratio of the reflection effect (default 0.5).         * @param ratio The ratio of the alpha gradient between 0 and 255 (default 255).         * @param size The size of the reflection, if this value is NaN the height of the passed-in bitmapdata is used.         * @param space The space between the bitmapData and this reflection (default 0).         */        public function ReflectionBitmapData( bitmap:IBitmapDrawable , alpha:Number = 0.5 , ratio:Number = 0xFF , size:Number = NaN , space:Number = 0 )        {            var w:Number = ("width" in bitmap)  ? ( bitmap["width"]  as Number ) : 0 ;            var h:Number = ("height" in bitmap) ? ( bitmap["height"] as Number ) : 0 ;                        alpha = clamp( isNaN(alpha) ? 1 : alpha , 0, 1 ) ;            ratio = clamp( isNaN(ratio) ? 0 : ratio , 0, 0xFF ) ;                        size  = size > 0 ? size : h ;            size  = Math.min( h , size ) ;                        super( w , h + size , true , 0xFFFFFF ) ;                        //////// create reflection                        var reflect:BitmapData = new BitmapData(w, h, true, 0xFFFFFF) ;                        _matrix.identity() ;            _matrix.scale( 1 , -1 ) ;            _matrix.translate( 0 , h ) ;                        reflect.draw( bitmap , _matrix ,  null , null , new Rectangle(0,0, reflect.width, size ) ) ;                        _matrix.identity() ;            _matrix.createGradientBox( reflect.width , size , -Math.PI * .5);                        ////////////                        _graphics.clear() ;            _graphics.beginGradientFill( GradientType.LINEAR, [ 0xFFFFFF , 0xFFFFFF ] , [ 0 , alpha ] , [ 0 , ratio ] ,  _matrix ) ;            _graphics.drawRect( 0, 0, reflect.width, size ) ;                        var gradient:BitmapData = new BitmapData( _shape.width , _shape.height , true, 0xFFFFFF ) ;                        gradient.draw( _shape ) ;                        ////////////                        var effect:BitmapData = new BitmapData(w, size, true, 0) ;                        effect.copyPixels( reflect , effect.rect , _origin, gradient , _origin , true ) ;                        _matrix.identity() ;            _matrix.translate( 0 , h + space ) ;                        draw( bitmap ) ;            draw( effect , _matrix ) ;                        _matrix.identity() ;                        reflect.dispose()  ;            gradient.dispose() ;            effect.dispose()   ;        }                /**         * @private         */        private static const _matrix:Matrix = new Matrix();                /**         * @private         */        private static const _origin:Point = new Point() ;                /**         * @private         */        private static const _shape:Shape = new Shape() ;                /**         * @private         */        private static const _graphics:Graphics = _shape.graphics ;    }}