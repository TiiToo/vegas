<languageVersion: 1.0;>

kernel RoundPixel
<   
    namespace   : "graphics.filters" ;
    vendor      : "ALCARAZ Marc (eKameleon)" ;
    version     : 1 ;
    description : "Rounds the pixels." ;
>
{
    /**
     * Specify the edge value of the effect.
     */
    parameter float edge
    <
        minValue     : float(0.0) ;
        maxValue     : float(300.0) ;
        defaultValue : float(1.0) ;
        description  : "The edge value of the alpha components in all pixels." ;
    >;
    
    /**
     * Specify the space value of the effect.
     */
    parameter float space
    <
        minValue     : float(1)   ;
        maxValue     : float(300) ;
        defaultValue : float(1) ;
        description  : "The space between the centers of the circles." ;
    >;
    
    /**
     * Specify the size value of the effect.
     */
    parameter float size
    <
        minValue     : float(0.0) ;
        maxValue     : float(2.0) ;
        defaultValue : float(1.0) ;
        description  : "The size ratio of the circle pixels." ;
    >;
    
    input  image4 source ;
    output pixel4 result ;
    
    void evaluatePixel()
    {
        float2 pix = outCoord() ;
        float2 pos = float2
        ( 
            floor( pix.x / space ) * space , 
            floor( pix.y / space ) * space 
        ) ;
        
        result = sampleNearest( source , pos ) ;
        
        float d = distance( pix - ( space / 2.0 ) , pos ) ;
        float s = size * result.a ;
        float r = 2.0 * d / s ;
        
        if ( r > space )
        {
            result.a = 0.0 ;
        }
        else if ( r > ( space - edge ) )
        {
            result.a = ( space - r ) * result.a / edge ;
        }
    }
}