<languageVersion : 1.0;>

kernel CircleSpectrum
<
    namespace   : "graphics.filters";
    vendor      : "ALCARAZ Marc (eKameleon)";
    version     : 1 ;
    description : "Maps a color spectrum to a circle area.";
>
{
    input  image4 source ;
    output float4 result ;
    
    /**
     * The center position of the circle.
     */
    parameter float2 center
    <
        minValue     : float2(    0.0 ) ;
        maxValue     : float2( 2800.0 ) ;
        defaultValue : float2(  100.0 ) ;
    >;
    
    /**
     * The inner radius value.
     */
    parameter float innerRadius
    <
        minValue     :    0.0 ;
        maxValue     : 2800.0 ;
        defaultValue :   50.0 ;
    >;
    
    /**
     * The outer radius value.
     */
    parameter float outerRadius
    <
        minValue     :    0.0 ;
        maxValue     : 2800.0 ;
        defaultValue :  100.0 ;
    >;
    
    /**
     * The ratio of the spectrum value.
     */ 
    parameter float ratio
    <
        minValue     : 0.0 ;
        maxValue     : 1.0 ;
        defaultValue : 1.0 ;
    >;
    
    /**
     * The rotation angle value.
     */
    parameter float rotation
    <
        minValue     :   0.0 ;
        maxValue     : 360.0 ;
        defaultValue :   0.0 ;
    >;
    
    /**
     * Evaluates the current pixel.
     */
    void evaluatePixel()
    {
        float2 pos      = outCoord() ;
        float2 distance = pos - center ;
        float  radius   = length( distance ) ;
        pixel4 color    = sampleLinear( source , pos );
        
        // calculate rotation based on the distance to the center
        
        float angle = degrees( atan( distance[1] , distance[0] ) ) ;
        
        angle = mod( angle + ( 360.0 - rotation ) , 360.0 ) ;
        
        // pixel is in range
        
        if (radius > innerRadius - 1.0 && radius < outerRadius + 1.0 ) 
        {
            angle = radians(angle / ratio);
            
            result.r = ( cos( angle ) * 127.0 + 128.0 ) / 255.0 ;
            result.g = ( cos( angle + radians( 120.0 ) ) * 127.0 + 128.0 ) / 255.0 ;
            result.b = ( cos( angle + radians( 240.0 ) ) * 127.0 + 128.0 ) / 255.0 ;
            result.a = 1.0 ;
            
            // soften pixel that are less than a pixel away from radius
            
            float factor = 0.0 ;
            
            if ( radius < innerRadius ) 
            {
                factor = innerRadius - radius ;
            }
            else if ( radius > outerRadius ) 
            {
                factor = radius - outerRadius ;
            }
            
            result = mix( result , color, factor );
        }
        else
        {
            result = color;
        }
    }
}
