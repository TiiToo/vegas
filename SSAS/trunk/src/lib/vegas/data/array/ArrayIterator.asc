/* ---------- Class ArrayIterator

	AUTHOR

		Name : ArrayIterator
		type : SSAS
		Package : vegas.data.array
		Version : 1.0.0.0
		Author : ekameleon
		Date : 2006-01-09
		URL : http://www.ekameleon.net
		Mail : vegas@ekameleon.net

		
	METHOD SUMMARY

		- hasNext()
		
		- key()
		
		- next()
		
		- reset()
		
		- remove()
		
		- seek( n:Number )
		
		- reset()
		
		- toString()
	
	INHERIT
	
		Object
	
	EXAMPLE
	
		var ar = [2, 4, 10] ;
		var it = new vegas.data.array.ArrayIterator(ar) ;
		while(it.hasNext()) {
			var value = it.next() ;
			var key = it.key() ;
			trace (key + " : " + value) ;
		}
	
---------- */ 

var namespace = _global.getPackage("vegas.data.array") ;

if (namespace.ArrayIterator == undefined) {
	
	// ----o Constructor

	vegas.data.array.ArrayIterator = function ( ar /*Array*/ ) { 
		this._a = ar ;
		this._k = -1 ;
	}

	var constructor = vegas.data.array.ArrayIterator ;
	var proto = constructor.prototype ;

	// ----o Public Methods
		
	proto.hasNext = function () {
		return (this._k < this._a.length -1) ;
	}
	
	proto.key = function() {
		return this._k ;
	}
	
	proto.next = function () {
		return this._a[++this._k] ;
	}

	proto.reset = function() {
		this._k = -1 ;
	}
	
	proto.remove = function() {
		this._a.splice(this._k--, 1) ;
	}
	
	proto.seek = function (n) {
		var l = this._a.length ;
		if (n<-1) n=-1 ;
		else if (n> l) n = l ;
		this._k = n ;
	}
	
	proto.toString = function () {
		return "[ArrayIterator]" ;
	}

	// ----o Encapsulate

	delete constructor ;
	delete proto ;
	
	//trace ("***** running vegas.data.array.ArrayIterator") ;
	
}

delete namespace ;