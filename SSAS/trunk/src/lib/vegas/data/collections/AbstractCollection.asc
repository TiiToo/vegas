/* ----- Class AbstractCollection

	AUTHOR

		Name : AbstractCollection
		type : SSAS
		Package : vegas.data.collections
		Version : 1.0.0.0
		Author : ekameleon
		Date : 2006-01-09
		URL : http://www.ekameleon.net
		Mail : contact@ekameleon.net
		
	METHOD SUMMARY

		- clear()
		
		- contains(o)
		
		- get(id)
		
		- indexOf(o)
		
		- insert(o)
		
		- isEmpty()
		
		- iterator()
		
		- remove()
		
		- size():Number
		
		- toArray():Array
		
		- toSource():String
		
		- toString():String

	INHERIT
	
		Object > Collection > AbstractCollection

	IMPLEMENTS
	
		Collection, Serializable, ToString
	
	EXAMPLE
	
		var ar = ["item1", "item2", "item3"]
		var co = new vegas.data.collections.AbstractCollection(ar) ;
		co.insert("item4") ;
		trace ("co : " + co) ;
		trace ("co.toSource : " + co.toSource()) ;
		trace ("co get 2 : " + co.get(2)) ;
		var it = co.iterator() ;
		while(it.hasNext()) {
			trace (it.next() + " : " + it.key()) ;
		}
		trace ("co indexOf 'item1' : " + co.indexOf("item2")) ;
		co.clear() ;
		trace ("co isEmpty : " + co.isEmpty()) ;
		trace ("co size : " + co.size()) ;
	
	SEE ALSO 
	
		Core2 Library
	
---------- */ 


var namespace = _global.getPackage("vegas.data.collections") ;

if (namespace.AbstractCollection == undefined) {

	loadFile("vegas/data/Collection.asc") ;
	loadFile("vegas/data/array/ArrayIterator.asc") ;
	loadFile("vegas/data/collections/CollectionFormat.asc") ;
	loadFile("vegas/util/TypeUtil.asc") ;
	
	// ----o Constructor

	vegas.data.collections.AbstractCollection = function ( ar /*Array*/ ) { 
		if (vegas.util.TypeUtil.typesMatch(ar, Array) && ar.length > 0) {
			this._a = [].concat(ar) ;
		} else {
			this._a = [] ;
		}
	}

	var constructor = vegas.data.collections.AbstractCollection ;
	var proto = constructor.extend(vegas.data.Collection) ;
	
	// ----o Public Methods
		
	proto.clone = function () {
		return new vegas.data.collections.AbstractCollection(this._a) ; // override this method
	}

	proto.clear = function () {
		this._a.splice(0) ;
	}

	proto.contains = function (o) {
		return this._a.contains(o) ;
	}

	proto.get = function (id /*Number*/ ) { 
		return this._a[id] ;
	}

	proto.insert = function ( o ) /*Boolean*/ { 
		if (o == undefined) return false ;
		this._a.push(o) ;
		return true ;
	}
	
	proto.indexOf = function ( o ) /*Number*/ {
		return this._a.indexOf(o) ;
	}

	proto.isEmpty = function () /*Boolean*/ { 
		return this._a.length == 0 ;
	}
	
	proto.iterator = function () /*Iterator*/ {
		return new vegas.data.array.ArrayIterator(this._a) ;
	}
	
	proto.remove = function (o) /*Boolean*/ {
		var it = this.iterator() ;
		if (o == null) {
			while(it.hasNext()) {
				if (it.next() == null) {
					it.remove() ;
					return true ;
				}
			}
		} else {
			while (it.hasNext()) {
				if (o == it.next() ) {
					it.remove() ;
					return true ;
				}
			}
		}
		return false ;
	}
	
	proto.size = function () /*Number*/ {
		return this._a.length ;
	}
	
	proto.toArray = function () /*Array*/ {
		return this._a.concat() ;
	}
	
	proto.toSource = function (indent/*Number*/, indentor/*String*/) /*String*/ {
		return "new " + this.getConstructorPath() + "(" + this._a.toSource() + ")" ;
	}
	
	proto.toString = function () /*String*/ {
		return (new vegas.data.collections.CollectionFormat()).formatToString(this) ;
	}
	
	// ----o Encapsulate

	delete constructor ;
	delete proto ;
	
	//trace ("***** running vegas.data.collections.AbstractCollection") ;
	
}

delete namespace ;