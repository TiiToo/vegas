/* ----- Class HashMap

	AUTHOR

		Name : HashMap
		type : SSAS
		Package : vegas.data.map
		Version : 1.0.0.0
		Author : ekameleon
		Date : 2006-01-17
		URL : http://www.ekameleon.net
		Mail : vegas@ekameleon.net
		
	METHOD SUMMARY

		- clear()
		
		- clone()
		
		- containsKey
		
		- containsValue( value )
		
		- get(key)
		
		- getKeys()
		
		- getValues()
		
		- indexOfKey(key)
		
		- indexOfValue(value)
		
		- isEmpty()
		
		- iterator()
		
		- keyIterator()
		
		- put(key, value)
		
		- putAll(m:Map)
		
		- remove(key)
		
		- size()
		
		- toSource():String
		
		- toString():String

	INHERIT
	
		Object > HashMap

	IMPLEMENTS
	
		Cloneable, Iterable, Map, Serializable, ToString
	
	EXAMPLE
	
		load("lib/vegas.asc") ;
	
		var map = new vegas.data.map.HashMap() ;
		map.put("key1", "value1") ;
		map.put("key2", "value2") ;
		map.put("key3", "value3") ;
		trace ("map toSource : " + map.toSource()) ;
		trace ("------ iterator") ;
		var it = map.iterator() ;
		while (it.hasNext()) {
			trace (it.next() + " : " + it.key()) ;
		}
		trace ("------ clone") ;
		var map2 = map.clone() ;
		map2.put("key1", "value4") ;
		map2.remove("key2") ;
		trace ("initial map : " + map) ;
		trace ("clone map : " + map2) ;

	SEE ALSO
	
		MapIterator, MapFormat

---------- */ 

var namespace = _global.getPackage("vegas.data.map") ;

if (namespace.HashMap == undefined) {

	loadFile("vegas/data/array/ArrayIterator.asc") ;
	loadFile("vegas/data/map/MapIterator.asc") ;
	loadFile("vegas/data/map/MapFormat.asc") ;

	// ----o Constructor

	vegas.data.map.HashMap = function () { 
		var k = arguments[0] ;
		var v = arguments[1] ;
		var b = (k instanceof Array && v instanceof Array && k.length == v.length) ;
		this._keys = b ? [].concat(k) : [] ;
		this._values = b ? [].concat(v) : [] ;
	}

	var constructor = vegas.data.map.HashMap ;
	var proto = constructor.extend(Object) ;

	// ----o Public Methods
	
	proto.clear = function () {
		this._keys = [] ;
		this._values = [] ;
	}
	
	proto.clone = function () {
		return new vegas.data.map.HashMap(this._keys, this._values) ;
	}

	proto.containsKey = function ( key ) /*Boolean*/ {
		return this._keys.contains(key) ;
	}

	proto.containsValue = function ( value ) /*Boolean*/ {
		return this._values.contains(key) ;
	}

	proto.get = function (key) {
		return this._values[this.indexOfKey(key)] ;
	}
	
	proto.getKeys = function () /*Array*/ {
		return this._keys.concat() ;
	}

	proto.getValues = function () /*Array*/ {
		return this._values.concat() ;
	}

	proto.indexOfKey = function (key) /*Number*/ {
		return this._keys.indexOf(key) ;
	}

	proto.indexOfValue = function (value) /*Number*/ {
		return this._values.indexOf(value) ;
	}
	
	proto.isEmpty = function () /*Boolean*/ {
		return (this.size() == undefined) || (this.size() < 1) ;
	}
	
	proto.iterator = function () /*Iterator*/ {
		return new vegas.data.map.MapIterator(this) ;
	}
	
	proto.keyIterator = function () /*Iterator*/ {
		return new vegas.data.array.ArrayIterator(this._keys) ;
	}
	
	proto.put = function (key, value) {
		var r = null ;
		var i = this.indexOfKey(key) ;
		if (i<0) {
			this._keys.push(key) ;
			this._values.push(value) ;
		} else {
			r = this._values[i] ;
			this._values[i] = value ;
		}
		return r ;
	}
	
	proto.putAll = function (m /*Map*/) {
		var aV /*Array*/ = m.getValues() ;
		var aK /*Array*/ = m.getKeys() ;
		var l = aK.length ;
		for (var i = 0 ; i<l ; i = i - (-1) ) {
			this.put(aK[i], aV[i]) ;
		}
	}
	
	proto.remove = function (key) {
		var r = null ;
		var i = this.indexOfKey(key) ;
		if (i > -1) {
			r = this._values[i] ;
			this._keys.splice(i, 1) ;
			this._values.splice(i, 1) ;
		}
		return r ;
	}
	
	proto.size = function () /*Number*/ {
		return this._keys.length ;
	}
	
	proto.toSource = function (indent, indentor) /*String*/ {
		return "new " + this.getConstructorPath() + "(" + this._keys.toSource() + "," + this._values.toSource() + ")" ;
	}
	
	proto.toString = function () {
		return (new vegas.data.map.MapFormat()).formatToString(this) ;
	}
	
	// ----o Encapsulate

	delete constructor ;
	delete proto ;
	
	//trace ("***** running vegas.data.map.HashMap") ;
	
}

delete namespace ;