/* ---------- _global

	AUTHOR

		Name : _global
		type : SSAS
		Package : 
		Version : 1.0.0.0
		Author : ekameleon
		Date : 2006-01-10

	METHOD SUMMARY

		- getPackage( path:String )
	
---------- */ 

_global.getPackage = function ( path /*String*/ ) {
	var a = path.split('.');
    var scope = _global ;
	var l = a.length ;
	for (var i = 0 ; i < l ; i++) {
      var name = a[i];
      if ( ! scope.hasOwnProperty(name) ) scope[name] = {} ;
      scope = scope[name] ;
   }
   return scope ;
}