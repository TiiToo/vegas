/** JSONError
 
	AUTHOR
	
		Name : JSONError
		type : SSAS
		Package : vegas.string.errors
		Version : 1.0.0.0
		Date :  2006-06-01
		Author : ekameleon
		URL : http://www.ekameleon.net
		Mail : contact@ekameleon.net

	PROPERTY SUMMARY
	
		- at:Number
		
		- errorElement:ErrorElement
		
		- message:String
		
		- name:String [Read Only]
		
		- source:String
	
	METHOD SUMMARY
	
		- getCategory():String
		
			get internal logger's category.
		
		- getLogger():ILogger 
		
			get internal Logger.
		
		- getName():String
		
			return the name of the Error.
		
		- toString():String

	INHERIT
	
		Object → Error → AbstractError → FatalError → ArgumentsError
	
	IMPLEMENT
	
		IFormattable, IHashable

**/
 
_global.getPackage("vegas.string.errors") ;

if (vegas.string.errors.JSONError == undefined) {
	
	// ----o Imports
	
	loadFile("vegas/errors/FatalError.asc") ;
	
	// ----o Singleton
 
	vegas.string.errors.JSONError = function (message/*String*/, at/*Number*/, source/*String*/) {
		vegas.errors.FatalError.call(this, message) ; // super() ;		
		this.at = at ;
		this.source = source ;
	}
	
	// ----o Inherit
 
	var constructor = vegas.string.errors.JSONError ;
	var proto = constructor.extend( vegas.errors.FatalError ) ;

	// ----o Public Properties
	
	proto.at /*Number*/ = null ;
	proto.source /*String*/ = null ;

	// ----o Public Methods

	proto.toString = function () /*String*/ {
		var ret /*String*/ = Error.prototype.toString.apply(this) ;
		if (!isNaN(this.at)) ret += ", at:" + this.at ;
		if (this.source != null) ret += " in \"" + this.source + "\"" ;
		this.getLogger().fatal(ret) ;
		return ret ;
	}

	// ----o Encapsulate
 
	delete constructor ;
	delete proto ;

	// trace ("***** running vegas.string.errors.JSONError") ;

}
