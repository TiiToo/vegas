/** Log

	AUTHOR

		Name : Log
		type : SSAS
		Package : vegas.logging
		Version : 1.0.0.0
		Author : ekameleon
		Date : 2006-05-31
		URL : http://www.ekameleon.net
		Mail : vegas@ekameleon.net
		
	CONSTANT SUMMARY
	
		- DEFAULT_CATEGORY : ""
		
		- ILLEGALCHARACTERS : "[]~$^&\/(){}<>+=`!#%?,:;'\"@"

	METHOD SUMMARY
	
		- static addTarget(target:ITarget, [logger:ILogger] ):Void
		
			DESCRIPTION
			
				Allows the specified target to begin receiving notification of log events.
			
			PARAMS
			
				- target : an ITarget instance
				
				- logger : optional ILogger instance
		
		- static flush():Void
		
			This method will remove all of the current loggers from the cache.
		
		- static getLogger(category:String, isQueue:Boolean) : ILogger 
		
			Returns the logger associated with the specified category.
			If the category given doesn't exist a new instance of a logger will be returned and associated with that category.
			Categories must be at least one character in length and may not contain any blanks or any of the following characters :
				[]~$^&\/(){}<>+=`!#%?,:;'"@ 
			This method will throw an InvalidCategoryError if the category specified is malformed.
		
		- static hasIllegalCharacters(value:String) : Boolean 
		
			This method checks the specified string value for illegal characters.
			
			Parameters
				
				value:String : string to check for illegal characters. The following characters are not valid: []~$^&\/(){}<>+=`!#%?,:;'"@
			
			Returns
			
				Boolean : true if there are any illegal characters found, false otherwise
		
		- static removeTarget(target:ITarget, [logger:ILogger] ) : Void 
			
			Stops the specified target from receiving notification of log events.
	
	
**/ 

_global.getPackage("vegas.logging") ;

if (vegas.logging.Log == undefined) {

	// ----o Imports
	
	loadFile("vegas/data/map/HashMap.asc") ;
	loadFile("vegas/logging/LogLogger.asc") ;
	
	// ----o Singleton

	vegas.logging.Log = {} ;

	var Log = vegas.logging.Log ;

	// ----o Constants
	
	Log.DEFAULT_CATEGORY /*String*/ = "" ;
	
	Log.ILLEGALCHARACTERS /*String*/ = "[]~$^&/\\(){}<>+=`!#%?,:;'\"@" ;
		
	// ----o Public Methods
		
	Log.addTarget = function (target/*ITarget*/, logger/*ILogger*/) /*Void*/ {
		
		if ( target instanceof vegas.logging.ITarget
				&& logger instanceof vegas.logging.ILogger) {
			
			target.addLogger( vegas.logging.Log.__logger ) ;
			
		}
	}

	Log.flush = function () /*Void*/ {
		vegas.logging.Log.__categories.clear() ;
	}
	
	Log.getLogger = function (category /*String*/, isQueue/*Boolean*/) /*ILogger*/ {
		var Log = vegas.logging.Log ;
		if (Log.hasIllegalCharacters(category)) {
			throw new vegas.logging.errors.InvalidCategoryError("Log 'getLogger', category is invalid.") ;
		}
		if (!category) {
			category = Log.DEFAULT_CATEGORY ;
		}
		if (! Log.__categories.containsKey(category)) {
			var logger /*LogLogger*/ = new vegas.logging.LogLogger(category) ;
			logger.isQueue = isQueue || false ;
			logger.parent = Log.__logger ; // Bubbling Event
			Log.__categories.put(category, logger) ;
		}
		return Log.__categories.get(category) ;
	}
		
	Log.hasIllegalCharacters = function (value /*String*/ ) /*Boolean*/ {
		var a /*Array*/ = vegas.logging.Log.ILLEGALCHARACTERS.split("") ;
		return value.indexOfAny( a ) != -1 ;
	}
	
	Log.removeTarget = function (target /*ITarget*/, logger/*ILogger*/) /*Void*/ {
		target.removeLogger( logger || vegas.logging.Log.__logger) ;
	}

	Log.toString = function () /*String*/ {
		return "[Log]" ;
	}
	
	// ----o Private Properties
	
	Log.__logger /*LogLogger*/ = new vegas.logging.LogLogger() ;
	Log.__categories/*HashMap*/ = new vegas.data.map.HashMap() ;

	// ----o Private Methods
	
	Log._handleEvent = function (e /*Event*/ ) {
		Log.__logger.dispatchEvent(e) ;
	}
	
	// ----o Encapsulate

	delete Log ;

	//trace ("***** running vegas.logging.Log") ;
	
}