/**
 * All logger target implementations that have a formatted line style output should extend this class. It provides default behavior for including date, time, category, and level within the output.
 * @author eKameleon
 */
if (vegas.logging.targets.LineFormattedTarget == undefined) 
{

	/**
	 * Import
	 */
	require("vegas.logging.AbstractTarget") ;

	// ----o Constructor

	vegas.logging.targets.LineFormattedTarget = function () { 
		//
	}

	/**
	 * Creates a new LineFormattedTarget instance.
	 */
	vegas.logging.targets.LineFormattedTarget.extend(vegas.logging.AbstractTarget) ;
	
	/**
	 * Indicates if the category for this target should added to the trace.
	 */
	vegas.logging.targets.LineFormattedTarget.prototype.includeCategory /*Boolean*/ = null ;

	/**
	 * Indicates if the date should be added to the trace.
	 */
	vegas.logging.targets.LineFormattedTarget.prototype.includeDate /*Boolean*/ = null ;
	
	/**
	 * Indicates if the level for the event should added to the trace.
	 */
	vegas.logging.targets.LineFormattedTarget.prototype.includeLevel /*Boolean*/ = null;
		
	/**
	 * Indicates if a line number should be added to the trace.
	 */
	vegas.logging.targets.LineFormattedTarget.prototype.includeLines /*Boolean*/ = null ; 

	/**
	 * Indicates if the time should be added to the trace.
	 */
	vegas.logging.targets.LineFormattedTarget.prototype.includeTime /*Boolean*/ = null ;
	
}