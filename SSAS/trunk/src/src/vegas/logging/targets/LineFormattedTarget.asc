	vegas.logging.targets.LineFormattedTarget.prototype.includeDate /*Boolean*/ = null ;
	
	vegas.logging.targets.LineFormattedTarget.prototype.includeLevel /*Boolean*/ = null;
	
	vegas.logging.targets.LineFormattedTarget.prototype.includeLines /*Boolean*/ = null ; 
	
	vegas.logging.targets.LineFormattedTarget.prototype.includeTime /*Boolean*/ = null ;
	
