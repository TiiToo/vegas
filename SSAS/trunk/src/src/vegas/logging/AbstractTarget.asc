/** ITarget

	AUTHOR

		Name : AbstractTarget
		type : SSAS
		Package : vegas.logging
		Version : 1.0.0.0
		Author : ekameleon
		Date : 2006-05-31
		URL : http://www.ekameleon.net
		Mail : vegas@ekameleon.net
	
	PROPERTY SUMMARY
	
		- filters:Array
		
			In addition to the level setting, filters are used to provide a pseudo hierarchical 
			mapping for processing only those events for a given category.
		
		- level:Number
		
			Provides access to the level this target is currently set at.

	METHOD SUMMARY
	
		- addLogger(logger:ILogger):Void
		
			Sets up this target with the specified logger.
			
			NOTE this method is called by the framework and should not be called by the developer.
		
		- handleEvent(e:Event) 
		
			Intercepte les événements.
		
		- removeLogger(logger:ILogger):Void
		
			Stops this target from receiving events from the specified logger.
			
			NOTE this method is called by the framework and should not be called by the developer.
	
	INHERIT
	
		CoreObject → EventListener → ITarget → AbstractTarget
	
	IMPLEMENTS
	
		EventListener, IFormattable, IHashable
	
**/ 

_global.getPackage("vegas.logging") ;

if (vegas.logging.AbstractTarget == undefined) {

	// ----o Import
	
	loadFile("vegas/logging/ITarget.asc") ;
	
	// ----o Constructor

	vegas.logging.AbstractTarget = function () { 
		//
	}

	// ----o Inherit

	var constructor = vegas.logging.AbstractTarget ;
	var proto = constructor.extend(vegas.logging.ITarget) ;
	
	// ----o Public Properties
	
	proto.filters /*Array*/ = null ;
	proto.level /*Number*/ = null ;
	
	// ----o Public Methods
	
	proto.addLogger = function ( logger /*ILogger*/ ) /*Void*/ {
		logger.addEventListener( vegas.logging.LogEvent.LOG , this) ;
	}

	proto.addNamespace = function ( namespace/*String*/) /*Boolean*/ {
		if (this.filters == undefined) this.filters = [] ;
		if (this.filters.contains(namespace)) return false ;
		this.filters.push(namespace) ;
	}

	proto.logEvent = function (e /*LogEvent*/ )/*Void*/ {
		//
	}

	proto.handleEvent = function ( e /*Event*/ ) {
		var LogEvent = vegas.logging.LogEvent ;
		var LogEventLevel = vegas.logging.LogEventLevel ;
		if ( level == LogEventLevel.ALL || level == LogEvent(e).level ) {
			var category /*String*/ = LogEvent(e).getTarget()["category"] ;
			var isValid /*Boolean*/ = this._isValidCategory(category) ;
			if (isValid) {
				this.logEvent( LogEvent(e) ) ;
			}
		}
	}

	proto.removeLogger = function ( logger /*ILogger*/ ) /*Void*/ {
		logger.removeEventListener(vegas.logging.LogEvent.LOG, this) ;
	}
	
	proto.removeNamespace = function (namespace/*String*/)/*Boolean*/ {
		var pos/*Number*/ = this.filters.indexOf(namespace) ;
		if ( pos > -1) {
			this.filters.splice(pos, 1) ;
			return true ;
		} else {
			return false ;
		}
	}
	
	// ----o Private Methods
	
	proto._isValidCategory = function (category /*String*/ ) /*Boolean*/ {
		var WildExp /*Function*/ = vegas.string.WildExp ;
		if (category == vegas.logging.Log.DEFAULT_CATEGORY) {
			return true ;
		}
		var l /*Number*/ = this.filters.length ;
		if (l > 0) {
			for (var i/*Number*/ = 0 ; i<l ; i++) {
				var pattern/*String*/ = this.filters[i] ;
				var we /*WildExp*/ = new vegas.string.WildExp( pattern, WildExp.IGNORECASE | WildExp.MULTIWORD );
				var result = we.test( category ) ;
				return (result == true || pattern == category) ;
			}
			return false ;
		} else {
			return true ;
		}
	}
	
	// ----o Encapsulate

	delete constructor ;
	delete proto ;
	
	//trace ("***** running vegas.logging.AbstractTarget") ;
	
}