/** BasicEvent
 
	AUTHOR
	
		Name : BasicEvent
		type : SSAS
		Package : vegas.events
		Version : 1.0.0.0
		Date :  2006-05-21
		Author : ekameleon
		URL : http://www.ekameleon.net
		Mail : contact@ekameleon.net
 
	USE
	
	
		var EventType = vegas.events.EventType ;
		
		var e = new vegas.events.BasicEvent(EventType.CHANGE, this, "Hello World") ;
		
		trace("> " + e) ;
		trace("> target : " + e.getTarget()) ;
		trace("> type : " + e.getType()) ;
		trace("> context : " + e.getContext()) ;
		trace("> timeStamp : " + new Date(e.getTimeStamp()) ) ;
 
	METHOD SUMMARY

		- cancel():Void
		
		- clone():BasicEvent
		
		- getBubbles():Boolean
		
		- getContext()
		
		- getCurrentTarget()
		
		- getEventPhase():Number
		
		- getTarget()
		
		- getTimeStamp():Number
		
		- getType():String
		
		- initEvent(type:String, bubbles:Boolean, cancelable:Boolean)
		
		- isCancelled():Boolean
		
		- isQueued():Boolean
		
		- queueEvent():Void
		
		- setBubbles(b:Boolean):Void
		
		- setContext(context):Void
		
		- setCurrentTarget(target):Void
		
		- setEventPhase(n:Number):Void
		
		- setTarget(target):Void
		
		- setType(type:String):Void
		
		- stopImmediatePropagation():Void
		
		- toString():String
	
	INHERIT
	
		Event â†’ BasicEvent
 
	IMPLEMENTS 
	
		Event
 
 **/
 
var p = _global.getPackage("vegas.events") ;

if (p.BasicEvent == undefined) {
	
	// ----o Imports
	
	loadFile("vegas/events/Event.asc") ;
	loadFile("vegas/events/EventPhase.asc") ;
	
	var Event = vegas.events.Event ;
	var EventPhase = vegas.events.EventPhase ;
	
	// ----o Constructor
 
	vegas.events.BasicEvent = function(type/*String*/, target/*Object*/, context/*Object*/) {
		this._bubbles = true ;
		this._context = context || null ;
		this._eventPhase = EventPhase.AT_TARGET ;
		this.stop = EventPhase.NONE ;
		this._target = target || null ;
		this._time = (new Date()).valueOf() ;
		this._type = type ;
	}
	
	// ----
 
	var constructor = vegas.events.BasicEvent ;
	var proto = constructor.extend(vegas.events.Event) ;
 
	// ----o Public Properties
	
	proto.stop /*Number*/ = null ;
 
	// ----o Private Properties
	
	proto._cancelled /*Boolean*/ = null ;
	proto._context /*Object*/ = null ;
	proto._currentTarget /*Object*/ = null ;
	proto._inQueue /*Boolean*/ = null ;
	proto._target /*Object*/ = null ;
	proto._type /*String*/ = null ;
 
	// ----o Public Methods
 
 	proto.cancel = function () /*Void*/ {
		this._cancelled = true ;
	}

	/**
	 * @return a new clone reference.
	 */
	proto.clone = function () {
		return new vegas.events.BasicEvent(this.getType(), this.getTarget(), this.getContext()) ;
	}

	/**
	 * @return 'true' if the event is bubbling.
	 */
 	proto.getBubbles = function () /*Boolean*/ {
		return this._bubbles ;
	}

 	proto.getContext = function () /*Object*/ {
		return this._context ;
	}

 	proto.getCurrentTarget = function () /*Object*/ {
		return this._currentTarget ;
	}

 	proto.getEventPhase = function () /*Number*/ {
		return this._eventPhase ;
	}

 	proto.getTarget = function () /*Object*/ {
		return this._target ;
	}

 	proto.getTimeStamp = function () /*Number*/ {
		return this._time ;
	}
	
 	proto.getType = function () /*String*/ {
		return this._type ;
	}
	
	proto.initEvent = function (type /*String*/ , bubbles /*Boolean*/, cancelable /*Boolean*/ ) /*Void*/ {
		this._type = type ;
		this._bubbles = bubbles ;
		this._cancelled = cancelable ;
		this._time = (new Date()).valueOf() ;
	}

	proto.isCancelled = function() /*Boolean*/ {
		return this._cancelled ;	
	}
	
	proto.isQueued = function() /*Boolean*/ {
		return this._inQueue ;
	}

	proto.queueEvent = function() /*Void*/ {
		this._inQueue = true ;
	}

 	proto.setBubbles = function ( b /*Boolean*/ ) /*Void*/ {
		this._bubbles = b ;
	}

 	proto.setContext = function ( context /*Object*/ ) /*Void*/ {
		this._context = context || null ;
	}

 	proto.setCurrentTarget = function ( target /*Object*/ ) /*Void*/ {
		this._currentTarget = target ;
	}

 	proto.setEventPhase = function ( n /*Number*/ ) /*Void*/ {
		this._eventPhase = n ;
	}

 	proto.setTarget = function ( target /*Object*/ ) /*Void*/ {
		this._target = target || null ;
	}

 	proto.setType = function ( type /*String*/ ) /*Void*/ {
		this._type = type || null ;
	}

 	proto.stopPropagation = function () /*Void*/ {
		this.stop = EventPhase.STOP ;
	}
	
	proto.stopImmediatePropagation = function () /*Void*/ {
		this.stop = EventPhase.STOP_IMMEDIATE ;
	}

	proto.toString = function () /*String*/ {
		var EventPhase = vegas.events.EventPhase ;
		var phase /*Number*/ = this.getEventPhase() ;
		var name /*String*/ = this.getConstructorName() ;
		var txt /*String*/ = "[" + name ;
		if (this.getType()) txt += " " + this.getType() ;
		switch (phase) {
			case EventPhase.CAPTURING_PHASE :
				txt += ", CAPTURING" ;
				break;
			case EventPhase.AT_TARGET:
				txt += ", AT TARGET" ;
				break ;
			case EventPhase.BUBBLING_PHASE:
				txt += ", BUBBLING" ;
				break ;
			default :
				txt += ", (inactive)" ;
				break;
		}
		if (this.getBubbles() && phase != EventPhase.BUBBLING_PHASE) {
			txt += ", bubbles" ;
		}
		if (this.isCancelled()) {
			txt += ", can cancel" ;
		}
		txt += "]" ;
		return txt ;
	}

	// ----o Encapsulate

	delete Event ;
	delete EventPhase ;

	delete constructor ;
	delete proto ;

}
