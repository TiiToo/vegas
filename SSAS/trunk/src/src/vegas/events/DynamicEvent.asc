/** DynamicEvent
 
	AUTHOR
	
		Name : DynamicEvent
		type : SSAS
		Package : vegas.events
		Version : 1.0.0.0
		Date :  2006-05-25
		Author : ekameleon
		URL : http://www.ekameleon.net
		Mail : contact@ekameleon.net
 
	USE
	
		var EventType = vegas.events.EventType ;
		
		var e = new vegas.events.DynamicEvent(EventType.CHANGE, this, "Hello World") ;
		
		trace("> " + e) ;
		trace("> target : " + e.target) ;
		trace("> type : " + e.type) ;
		trace("> context : " + e.context) ;
		trace("> timeStamp : " + new Date(e.timeStamp) ) ;

	PROPERTY SUMMARY

		- bubbles:Boolean [R/W]
		
		- context [R/W]
		
		- currentTarget [R/W]
		
		- eventPhase:Number [R/W]
		
		- target [R/W]
		
		- type:String [R/W]

	METHOD SUMMARY

		- cancel():Void
		
		- clone():BasicEvent
		
		- getBubbles():Boolean
		
		- getContext()
		
		- getCurrentTarget()
		
		- getEventPhase():Number
		
		- getTarget()
		
		- getTimeStamp():Number
		
		- getType():String
		
		- initEvent(type:String, bubbles:Boolean, cancelable:Boolean)
		
		- isCancelled():Boolean
		
		- isQueued():Boolean
		
		- queueEvent():Void
		
		- setBubbles(b:Boolean):Void
		
		- setContext(context):Void
		
		- setCurrentTarget(target):Void
		
		- setEventPhase(n:Number):Void
		
		- setTarget(target):Void
		
		- setType(type:String):Void
		
		- stopImmediatePropagation():Void
		
		- toString():String
	
	INHERIT
	
		CoreObject → Event → BasicEvent → DynamicEvent
 
	IMPLEMENTS
	
		Event, ICloneable, IFormattable, IHashable
 
 **/
 
_global.getPackage("vegas.events") ;

if (vegas.events.DynamicEvent == undefined) {
	
	// ----o Imports
	
	loadFile("vegas/events/BasicEvent.asc") ;
	loadFile("vegas/util/factory/PropertyFactory.asc") ;
	
	// ----o Constructor
 
	vegas.events.DynamicEvent = function(type/*String*/, target/*Object*/, context/*Object*/) {
		vegas.events.BasicEvent.apply(this, Array.fromArguments(arguments)) ;
	}
	
	// ----o Inherit
 
	var constructor = vegas.events.DynamicEvent ;
	var proto = constructor.extend( vegas.events.BasicEvent ) ;

	// ----o Public Methods

 	/**
	 * @return a new clone reference.
	 */
	proto.clone = function () {
		return new vegas.events.DynamicEvent(this.getType(), this.getTarget(), this.getContext()) ;
	}
 
	// ----o Virtual Properties
	
	vegas.util.factory.PropertyFactory.create(proto, "bubbles") ;

	vegas.util.factory.PropertyFactory.create(proto, "context") ;

	vegas.util.factory.PropertyFactory.create(proto, "currentTarget") ;

	vegas.util.factory.PropertyFactory.create(proto, "eventPhase") ;

	vegas.util.factory.PropertyFactory.create(proto, "target") ;
	
	vegas.util.factory.PropertyFactory.create(proto, "timeStamp", true) ;
	
	vegas.util.factory.PropertyFactory.create(proto, "type") ;
	
	// ----o Encapsulate
 
	delete constructor ;
	delete proto ;

	// trace ("***** running vegas.events.DynamicEvent") ;

}
