/** ProtectedIterator

	AUTHOR

		Name : ProtectedIterator
		type : SSAS
		Package : vegas.data.iterator
		Version : 1.0.0.0
		Author : ekameleon
		Date : 2006-01-11
		URL : http://www.ekameleon.net
		Mail : vegas@ekameleon.net

	CONSTRUCTOR
	
		var pIterator = new vegas.data.iterator.ProtectedIterator(it:Iterator) ;

	DESCRIPTION
	
		Protège un objet implémenté avec l'interface Iterator.
		Cette classe permet de bloquer les méthodes remove, reset et seek d'un Iterator.

	METHOD SUMMARY

		- hasNext()
		
		- key()
		
		- next()
		
		- toString()

	PROTECTED 
	
		- reset()
		
		- remove()
		
		- seek( n:Number )
		
		- reset()
		
**/ 

_global.getPackage("vegas.data.iterator") ;

if (vegas.data.iterator.ProtectedIterator == undefined) {
	
	// ----o Imports
	
	loadFile("vegas/core/CoreObject.asc") ;
	
	// ----o Constructor

	vegas.data.iterator.ProtectedIterator = function ( it /*Iterator*/ ) { 
		this._i = it ;
	}

	// ----o Inherit

	var constructor = vegas.data.iterator.ProtectedIterator;
	var proto = constructor.extend(vegas.core.CoreObject) ;

	// ----o Public Methods
	
	proto.hasNext = function () {
		return this._i.hasNext() ;
	}

	proto.key = function() {
		return this._i.key() ;
	}

	proto.next = function () {
		return this._i.next() ;
	}

	proto.remove = function() {
		this._notifyError("remove") ;
	}

	proto.reset = function() {
		this._notifyError("reset") ;
	}
	
	proto.seek = function (n) {
		this._notifyError("seek") ;
	}
	
	// ----o Private Methods
	
	proto._notifyError = function ( methodName/*String*/ ) /*Void*/ {
		throw new vegas.errors.UnsupportedOperation(this + " " + methodName + " method is unsupported.") ;
	}
	
	// ----o Encapsulate

	delete constructor ;
	delete proto ;
	
	//trace ("***** running vegas.data.iterator.ProtectedIterator") ;
	
}