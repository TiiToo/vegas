/* ----- Class StringIterator

	AUTHOR

		Name : StringIterator
		type : SSAS
		Package : vegas.data.iterator
		Version : 1.0.0.0
		Author : ekameleon
		Date : 2006-01-11
		URL : http://www.ekameleon.net
		Mail : vegas@ekameleon.net
		
	METHOD SUMMARY

		- hasNext()
		
		- key()
		
		- next()
		
		- reset()
		
		- remove()
		
		- seek( n:Number )
		
		- reset()
		
		- toString()
	
	INHERIT
	
		Object
	
	EXAMPLE
	
		var it = new vegas.data.iterator.StringIterator("Hello World") ;
		while(it.hasNext()) {
			trace (it.next()) ;
		}
		trace ("--- seek(2)") ;
		it.seek(2) ;
		while(it.hasNext()) {
			trace (it.next()) ;
		}
	
---------- */ 

var namespace = _global.getPackage("vegas.data.iterator") ;

if (namespace.StringIterator == undefined) {

	loadFile("vegas/util/MathsUtil.asc") ;
	
	// ----o Constructor

	vegas.data.iterator.StringIterator = function ( str /*String*/ ) { 
		this._s = new String(str) ;
		this._k = -1 ;
		this._size = str.length ;
	}

	var constructor = vegas.data.iterator.StringIterator ;
	var proto = constructor.prototype ;

	// ----o Public Methods
		
	proto.hasNext = function () {
		return this._k < (this._size-1)  ;
	}
	
	proto.key = function() {
		return this._k ;
	}
	
	proto.next = function () {
		return this._s.charAt( ++this._k );
	}

	proto.remove = function() {
		throw new Error("UnsupportedOperationError : StringIterator.remove") ;
	}

	proto.reset = function() {
		this._k = -1 ;
	}
	
	proto.seek = function (n) {
		this._k = vegas.util.MathsUtil.clamp(n-1, -1, this._size-1) ;
	}
	
	proto.toString = function () {
		return "[StringIterator]" ;
	}

	// ----o Encapsulate

	delete constructor ;
	delete proto ;
	
	//trace ("***** running vegas.data.iterator.StringIterator") ;
	
}

delete namespace ;