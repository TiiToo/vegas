/** ErrorFormat
 
	AUTHOR
	
		Name : ErrorFormat
		type : SSAS
		Package : vegas.errors
		Version : 1.0.0.0
		Date :  2006-05-31
		Author : ekameleon
		URL : http://www.ekameleon.net
		Mail : contact@ekameleon.net

	METHOD SUMMARY
	
		- formatToString(o):String

	INHERIT
	
		CoreObject â†’ ErrorFormat

	IMPLEMENT
	
		IFormat, IFormattable, IHashable
 
 **/
 
var p = _global.getPackage("vegas.errors") ;

if (p.ErrorFormat == undefined) {

	// ----o Imports
	
	loadFile("vegas/core/CoreObject.asc") ;

	// ----o Constructor
 
	vegas.errors.ErrorFormat = function() {
		//
	}
	
	// ----o Inherit
 
	var constructor = vegas.errors.ErrorFormat ;
	var proto = constructor.extend( vegas.core.CoreObject ) ;

	// ----o Public Methods

	proto.formatToString = function (o) /*String*/ {
		var txt /*String*/ = "[" + o.name + "]" ;
		var msg /*String*/ = o.message ;
		if (msg && msg.length > 0) txt += " " + msg ;
		return txt ;
	}
	
	// ----o Encapsulate
 
	delete constructor ;
	delete proto ;

	// trace ("***** running vegas.errors.ErrorFormat") ;

}

delete p ;
