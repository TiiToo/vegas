/** AbstractError
 
	AUTHOR
	
		Name : AbstractError
		type : SSAS
		Package : vegas.errors
		Version : 1.0.0.0
		Date :  2006-05-31
		Author : ekameleon
		URL : http://www.ekameleon.net
		Mail : contact@ekameleon.net
 
	DESCRIPTION
	
		EN CONSTRUCTION !!!

	PROPERTY SUMMMARY
	
		- errorElement:ErrorElement
		
		- message:String
		
		- name:String [Read Only]
	
	METHOD SUMMARY
	
		- getCategory():String
		
			get internal logger's category.
		
		- getLogger():ILogger 
		
			get internal Logger.
		
		- getMessage():String
		
			return the message of the Error.
		
		- getName():String
		
			return the name of the Error.
		
		- toString():String
	
	INHERIT
	
		Object → Error → AbstractError
 
	IMPLEMENTS
	
		IFormattable, IHashable
 
 **/
 
_global.getPackage("vegas.errors") ;

if ( vegas.errors.AbstractError == undefined ) {

	// ----o Constructor
 
	vegas.errors.AbstractError = function( message /*String*/ , e /*ErrorElement*/ ) {
		
		this.errorElement = e || null ;
		//trace( this.getConstructorPath() ) ;
		this.name = vegas.util.ConstructorUtil.getName(this) ;
		this.message = message ;
		this._logger = vegas.logging.Log.getLogger(this.name) ;
		
	}

	// ----o Inherit
 
	var constructor = vegas.errors.AbstractError ;
	var proto = constructor.extend( Error ) ;

	// ----o Public Properties

	proto.errorElement /*ErrorElement*/ = null ;
	
	// ----o Public Methods

	proto.getCategory = function () /*String*/ {
		return this._logger["category"] ;
	}
	
	proto.getLogger = function () /*ILogger*/ {
		return this._logger ;
	}
	
	// ----o Private Properties
	
	proto._logger /*ILogger*/ = null ;
	
	// ----o Encapsulate
 
	delete constructor ;
	delete proto ;

	// trace ("***** running vegas.errors.AbstractError") ;

}
