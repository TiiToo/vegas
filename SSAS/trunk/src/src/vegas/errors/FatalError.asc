/** FatalError
 
	AUTHOR
	
		Name : FatalError
		type : SSAS
		Package : vegas.errors
		Version : 1.0.0.0
		Date :  2006-05-31
		Author : ekameleon
		URL : http://www.ekameleon.net
		Mail : contact@ekameleon.net

	PROPERTY SUMMMARY
	
		- errorElement:ErrorElement
		
		- message:String
		
		- name:String [Read Only]
	
	METHOD SUMMARY
	
		- getCategory():String
		
			get internal logger's category.
		
		- getLogger():ILogger 
		
			get internal Logger.
		
		- getMessage():String
		
			return the message of the Error.
		
		- getName():String
		
			return the name of the Error.
		
		- toString():String
	
	INHERIT
	
		Object → Error → AbstractError → FatalError
 
	IMPLEMENTS
	
		IFormattable, IHashable
 
 **/
 
var p = _global.getPackage("vegas.errors") ;

if (p.FatalError == undefined) {
	
	// ----o Imports
	
	loadFile("vegas/errors/AbstractError.asc") ;
	loadFile("vegas/errors/ErrorFormat.asc") ;
	
	// ----o Constructor
 
	vegas.errors.FatalError = function( message /*String*/ , e /*ErrorElement*/ ) {
		
		// super() ;
		vegas.errors.AbstractError.apply(this, Array.fromArguments(arguments)) ;

	}
	
	// ----o Inherit
 
	var constructor = vegas.errors.FatalError ;
	var proto = constructor.extend( vegas.errors.AbstractError ) ;

	// ----o Public Methods

	proto.toString = function () /*String*/ {
		var msg /*String*/ (new vegas.errors.ErrorFormat()).formatToString(this) ;
		this.getLogger().fatal(msg) ;
		return msg ;
	}
		
	// ----o Encapsulate
 
	delete constructor ;
	delete proto ;

	// trace ("***** running vegas.errors.FatalError") ;

}

delete p ;
