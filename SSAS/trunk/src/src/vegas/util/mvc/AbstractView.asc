/** AbstractView [Interface]

	AUTHOR

		Name : AbstractView
		type : SSAS
		Package : vegas.util.mvc
		Version : 1.0.0.0
		Author : ekameleon
		Date : 2006-06-02
		URL : http://www.ekameleon.net
		Mail : vegas@ekameleon.net
		
	METHOD SUMMARY
	
		- getController():IController
	
		- getViewContainer():MovieClip
		
		- handleEvent(e:Event)
		
		- setModel(oModel:IModel):Void
		
		- setViewContainer(mcContainer:MovieClip):Void

	INHERIT
	
		CoreObject → EventListener → AbstractView
	
	IMPLEMENTS
	
		IFormattable, IHashable, EventListener
	
**/ 

if (vegas.util.mvc.AbstractView == undefined) {

	// ----o Constructor

	vegas.util.mvc.AbstractView = function ( oModel /*IModel*/ , oController /*IController*/ ) { 
		
		this.setController(oController) ;
		this.setModel(oModel) ;
		
	}

	// -----o Inherit
	
	vegas.util.mvc.AbstractView.extend(vegas.util.mvc.IView) ;
	
	// ----o Public Methods
	
	vegas.util.mvc.AbstractView.prototype.getController = function() /*IController*/ 
	{
		
		return this._oController ;
		
	}

	vegas.util.mvc.AbstractView.prototype.handleEvent = function (e /*Event*/ ) 
	{
		
		// override this method
		
	}

	vegas.util.mvc.AbstractView.prototype.registerWithModel = function ( oModel /*IModel*/ ) 
	{
		
		if(oModel instanceof vegas.util.mvc.IModel) {
			
			oModel.addView(this) ;
			
		}
		
	}

	vegas.util.mvc.AbstractView.prototype.setController = function( oController /*IController*/ ) /*Void*/ {
		
		this._oController = oController ;
		
	}
	
	vegas.util.mvc.AbstractView.prototype.setModel = function( oModel /*IModel*/ ) /*Void*/ 
	{
		
		this.registerWithModel( oModel ) ;
		
	}
	
	// ----o Private Properties
	
	vegas.util.mvc.AbstractView.prototype._oController /*IController*/ = null ;
	vegas.util.mvc.AbstractView.prototype._oModel /*IModel*/ = null ;
	
	// ----o Encapsulate

	// trace ("***** running vegas.util.mvc.AbstractView") ;
	
}