/**
 * Abstract class to creates IView implementations.
 * @author eKameleon
 */
if (vegas.util.mvc.AbstractView == undefined) 
{

	/**
	 * Abstract contructor, creates an IView instance.
	 */
	vegas.util.mvc.AbstractView = function ( oModel /*IModel*/ , oController /*IController*/ ) 
	{ 
		this.setController(oController) ;
		this.setModel(oModel) ;
	}
	
	/**
	 * @extends vegas.util.mvc.IView
	 */
	proto = vegas.util.mvc.AbstractView.extend(vegas.util.mvc.IView) ;
	
	/**
	 * Returns the controller reference of this view.
	 */
	proto.getController = function() /*IController*/ 
	{
		return this._oController ;
	}

	/**
	 * This method is called whenever an event occurs of the type for which the EventListener interface was registered.
	 * @param e The Event contains contextual information about the event.
	 */
	proto.handleEvent = function (e /*Event*/ ) 
	{
		// override this method
	}

	/**
	 * Register a model with this view.
	 */
	proto.registerWithModel = function ( oModel /*IModel*/ ) 
	{
		if(oModel instanceof vegas.util.mvc.IModel) 
		{
			oModel.addView(this) ;
		}
	}

	/**
	 * Sets the controller reference of this view.
	 */
	proto.setController = function( oController /*IController*/ ) /*Void*/ 
	{
		this._oController = oController ;
	}

	/**
	 * Sets a new model and register this model with this view. 
	 */
	proto.setModel = function( oModel /*IModel*/ ) /*Void*/ 
	{
		this.registerWithModel( oModel ) ;
	}
	
	/**
	 * @private
	 */
	proto._oController /*IController*/ = null ;
	
	/**
	 * @private
	 */
	proto._oModel /*IModel*/ = null ;
	
	delete proto ;
	
}