/**
 * Abstract class to creates IModel implementations.
 * @author eKameleon
 */
if (vegas.util.mvc.AbstractModel == undefined) 
{

	/**
	 * Abstract contructor, creates an IModel instance.
	 */
	vegas.util.mvc.AbstractModel = function () 
	{ 
		vegas.util.mvc.IModel.call(this) ;
	}

	/**
	 * @extends vegas.util.mvc.IModel
	 */
	proto = vegas.util.mvc.AbstractModel.extend(vegas.util.mvc.IModel) ;
	
	/**
	 * Adds a view in the model.
	 */
	proto.addView = function( oView /*IView*/ ) /*Void*/ 
	{
		this.addGlobalEventListener( oView ) ;
	}

	/**
	 * Returns a shallow copy of this object.
	 */	
	proto.clone = function () 
	{
		// override this method.
	}

	/**
	 * Notify a ModelChangedEvent to the views.
	 */
	proto.notifyChanged = function ( e /*ModelChangedEvent*/ ) /*Void*/ 
	{
		if (e instanceof vegas.events.ModelChangedEvent) 
		{
			this.dispatchEvent(e) ;
		}
	}

	/**
	 * Removes a view in the model.
	 */
	proto.removeView = function( oView /*IView*/ ) /*Void*/ 
	{
		this.removeGlobalEventListener( oView ) ;
	}
	
	delete proto ;
	
}