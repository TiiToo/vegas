/**
 * Abstract class to creates IController implementations.
 * @author eKameleon
 */
if (vegas.util.mvc.AbstractController == undefined) 
{

	/**
	 * Abstract contructor, creates an IController instance.
	 */
	vegas.util.mvc.AbstractController = function () 
	{ 

	}
	
	/**
	 * @extends vegas.util.mvc.IController
	 */
	proto = vegas.util.mvc.AbstractController.extend(vegas.util.mvc.IController) ;
	
	/**
	 * Returns the model of this controller.
	 */
	proto.getModel = function() /*IModel*/ 
	{
		return this._oModel ;
	}

	/**
	 * Returns the view of this controller.
	 */
	proto.getView = function() /*IView*/ 
	{
		return this._oView ;
	}

	/**
	 * Sets the model of this controller. 
	 */
	proto.setModel = function( oModel /*IModel*/ ) /*Void*/ 
	{
		this._oModel = oModel ;
	}

	/**
	 * Sets the view of this controller.
	 */
	proto.setView = function( oView /*IView*/ ) /*Void*/ 
	{
		this._oView = oView ;
	}

	/**
	 * @private
	 */	
	proto._oModel /*IModel*/ = null ;

	/**
	 * @private
	 */	
	proto._oView /*IView*/ = null ;
	
	delete proto ;
	
}