/** AbstractTypeable

	AUTHOR

		Name : AbstractTypeable
		type : SSAS
		Package : vegas.util
		Version : 1.0.0.0
		Author : ekameleon
		Date : 2006-01-12
		URL : http://www.ekameleon.net
		Mail : vegas@ekameleon.net
	
	METHOD SUMMARY
	
		- getType():Function
		
		- setType(type:Function):Void
		
		- supports(value):Boolean
		
		- toString():String
		
		- validate(value):Void
	
	INHERIT
	
		ITypeable â†’ AbstractTypeable

	IMPLEMENTS 
	
		Typeable, Validator
	
**/ 

_global.getNamespace("vegas.util") ;

if (vegas.util.AbstractTypeable == undefined) {

	// ----o Constructor

	vegas.util.AbstractTypeable = function ( type /*Function*/ ) { 
		if (type == null) {
			throw new vegas.events.IllegalArgumentError(this + " constructor, Argument 'type' must not be 'null' nor 'undefined'.") ;
		}
		this._type = type ;
	}

	// ----o Inherit
	
	vegas.util.AbstractTypeable.extend(vegas.core.ITypeable) ;

	// ----o Public Methods
	
	vegas.util.AbstractTypeable.prototype.getType = function() /*Void*/ {
		return this._type ;
	}

	vegas.util.AbstractTypeable.prototype.setType = function (type/*Function*/) /*Void*/ {
		this._type = type ;
	}

	vegas.util.AbstractTypeable.prototype.supports = function (value) /*Boolean*/ {
		return vegas.util.TypeUtil.typesMatch(value, this._type) ;
	}
	
	vegas.util.AbstractTypeable.prototype.validate = function (value) /*Void*/ {
		if (!this.supports(value)) {
			throw new vegas.errors.TypeMismatchError(this + ".validate('" + value + "') is mismatch.")
		}
	}
	
	//trace ("***** running vegas.util.AbstractTypeable") ;
	
}