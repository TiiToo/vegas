/* ----- Class AbstractTypeable

	AUTHOR

		Name : AbstractTypeable
		type : SSAS
		Package : vegas.util
		Version : 1.0.0.0
		Author : ekameleon
		Date : 2006-01-12
		URL : http://www.ekameleon.net
		Mail : vegas@ekameleon.net
	
	METHOD SUMMARY
	
		- getType():Function
		
		- setType(type:Function):Void
		
		- supports(value):Boolean
		
		- toString():String
		
		- validate(value):Void
	
	INHERIT
	
		Object > AbstractTypeable

	IMPLEMENTS 
	
		Typeable, Validator
	
---------- */ 

var namespace = _global.getPackage("vegas.util") ;

/*class*/ if (namespace.AbstractTypeable == undefined) {

	loadFile("vegas/core/ITypeable.asc") ;
	loadFile("vegas/util/TypeUtil.asc") ;
	
	// ----o Constructor

	vegas.util.AbstractTypeable = function ( type /*Function*/ ) { 
		if (type == undefined) throw new Error("IllegalArgumentError:Argument 'type' must not be 'null' or 'undefined'") ;
		this._type = type ;
	}

	var constructor = vegas.util.AbstractTypeable ;
	var proto = constructor.extend(vegas.core.ITypeable) ;

	// ----o Public Methods
	
	proto.getType = function() /*Void*/ {
		return this._type ;
	}

	proto.setType = function (type/*Function*/) /*Void*/ {
		this._type = type ;
	}

	proto.supports = function (value) /*Boolean*/ {
		return vegas.util.TypeUtil.typesMatch(value, this._type) ;
	}
		

	proto.toString = function () /*String*/ {
		return "[AbstractTypeable]" ;
	}
	
	
	proto.validate = function (value) /*Void*/ {
		if (!this.supports(value)) throw new Error("TypeMismatchError:Type mismatch") ;
	}
	
	// ----o Encapsulate

	delete constructor ;
	delete proto ;
	
	//trace ("***** running vegas.util.AbstractTypeable") ;
	
}

delete namespace ;