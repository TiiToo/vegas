/** PropertyFactory

	AUTHOR

		Name : PropertyFactory
		type : SSAS
		Package : vegas.util.factory
		Version : 1.0.0.0
		Author : ekameleon
		Date : 2006-05-25
		URL : http://www.ekameleon.net
		Mail : vegas@ekameleon.net
	
	DESCRIPTION
	
		Fabrique qui permet créer des propriétés virtuelles sur un objet donné.
	
	METHOD SUMMARY
	
		- static create(c:Function, propName:String, isPrototype:Boolean, isReadOnly:Boolean):Boolean

**/ 

if (vegas.util.factory.PropertyFactory == undefined) {
	
	// ----o Singleton

	vegas.util.factory.PropertyFactory = {} ;

	// ----o Public Methods
	
	vegas.util.factory.PropertyFactory.create = function (o, propName/*String*/, isReadOnly/*Boolean*/)/*Boolean*/ {
		
		var suffix /*String*/ = propName.ucFirst() ;
		o.__defineGetter__(propName, o["get"+suffix]) ;
		if (!isReadOnly) o.__defineSetter__(propName, o["set"+suffix]) ;
		return o.hasOwnProperty(propName) ;
		
	}
	
	// trace ("***** running vegas.util.factory.PropertyFactory") ;
	
}