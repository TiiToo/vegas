/**
 * The instances of this class can converts an object to a custom string representation.
 * @author eKameleon
 */
if (asgard.net.remoting.RemotingFormat == undefined) 
{
	
	/**
	 * @requires vegas.core.CoreObject
	 */
	require("vegas.core.CoreObject") ;
	
	/**
	 * Creates a new RemotingFormat instance.
	 */
	asgard.net.remoting.RemotingFormat = function() 
	{
		//
	}
	
	/**
	 * Inherit
	 */
	asgard.net.remoting.RemotingFormat.extend( vegas.core.CoreObject ) ;
 
	/**
	 * Converts the object to a custom string representation.
	 */	
	asgard.net.remoting.RemotingFormat.prototype.formatToString = function ( rs /*RemotingService*/ ) /*String*/
	{
		
		if ( rs == null || ! rs instanceof asgard.net.remoting.RemotingService ) 
		{
			return null ;
		} 		
		 
		var r = rs.getResult()  ;
		r = null ;
		var txt = "[" ;
		
		if (rs.getServiceName()) txt += "\r\tserviceName : " + rs.getServiceName() + " , " ;
		if (rs.getMethodName()) txt += "\r\tmethodName : " + rs.getMethodName() + " ," ;
		if (rs.getServiceName()) txt += "\r\tresult : " ;
		
		if (r != null) 
		{
			if ( r instanceof vegas.data.iterator.Iterable ) 
			{
				txt += "[\r" ;
				var it = r.iterator() ;
				while (it.hasNext()) 
				{
					var item = it.next() ;
					if ( vegas.util.TypeUtil.isExplicitInstanceOf( item, Object ) )
					{
						txt += "\t[\r" ;
						for (var prop in o) 
						{
							txt += "\t\t " + prop + " : " + item[prop] + "\r" ;
						}
						txt += "\t] " ; 
						txt += ( it.hasNext() ) ? "," : "" ;
						txt += "\r" ;
					}
					else
					{
						txt += "\t" + item + "\r" ;
					}
				}	
				
			}
			else 
			{
				txt += r  + "\r";
			}
			txt += "]" ;
		}
		else 
		{
			txt += "empty";
			if (rs.getServiceName() || rs.getMethodName()) txt += "\r" ;
			txt += "]" ;
		}
		return txt ;
	}
	
}
