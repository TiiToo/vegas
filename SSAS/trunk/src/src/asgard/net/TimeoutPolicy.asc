/**
 * Defines the policy of the timeout states in the application.
 * @author eKameleon
 */
if (asgard.net.TimeoutPolicy == undefined) 
{
	
	/**
	 * @requires vegas.core.CoreObject
	 */
	require("vegas.core.CoreObject") ;

	/**
	 * Creates a new TimeoutPolicy instance.
	 * @param the value of this policy object.
	 */
	asgard.net.TimeoutPolicy = function( value /*uint*/ ) 
	{
		this._value = (value > 0) ? value : 0;
	}

	/**
	 * @extends vegas.core.CoreObject
	 */
	proto = asgard.net.TimeoutPolicy.extend( vegas.core.CoreObject ) ;

	/**
	 * Returns the eden string representation of this object.
	 * @return the eden string representation of this object.
	 */		
	proto.toSource = function () /*String*/ 
	{
		return "new asgard.net.TimeoutPolicy(" +this._value.toSource() + ")" ;
	}

	/**
	 * Returns the string representation of this object.
	 * @return the string representation of this object.
	 */	
	proto.toString = function () /*String*/ 
	{
		return String(this._value) ;
	}

	/**
	 * Returns the primitive value of this object.
	 * @return the primitive value of this object.
	 */
	proto.valueOf = function () /*String*/ 
	{
		return this._value ;
	}

	delete proto ;
	
	/**
	 * This constant defines the 'infinity' timeout policy value(0).
	 */
	asgard.net.TimeoutPolicy.INFINITY /*TimeOutPolicy*/ = new asgard.net.TimeoutPolicy(0) ;

	/**
	 * This constant defines the 'limit' timeout policy value(1).
	 */
	asgard.net.TimeoutPolicy.LIMIT /*TimeOutPolicy*/ = new asgard.net.TimeoutPolicy(1) ;

}
