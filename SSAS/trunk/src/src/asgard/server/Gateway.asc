		Mail : contact@ekameleon.net
 
	DESCRIPTION
	
		Singleton.
 
	METHOD SUMMARY
	
	INHERIT
	
		CoreObject → AbstractCoreEventDispatcher → Gateway
 
	IMPLEMENTS
	
		EventTarget, IEventDispatcher, IFormattable, IHashable
 
 **/



if ( asgard.server.Gateway == undefined ) {

	// ----o Imports
	
	require("asgard.events.GatewayEvent") ;

	application = application ;

	// ----o Constructor
	
	asgard.server.Gateway = function () {
		
		this.__constructor__.call(this) ;
		
		var Delegate = vegas.events.Delegate ;
		
		application.onAppStart = Delegate.create( this, this._onAppStart ) ;
		application.onAppStop = Delegate.create( this, this._onAppStop ) ;
		application.onConnect = Delegate.create( this, this._onConnect ) ;
		application.onDisconnect = Delegate.create( this, this._onDisconnect ) ;
		
	}
	
	asgard.server.Gateway.extend (vegas.events.AbstractCoreEventDispatcher) ;

	// ----o Private Methods
	
	asgard.server.Gateway.prototype._onAppStart = function ( ) {
		
		this.dispatchEvent( new vegas.events.BasicEvent("onAppStart", this))
		
	}
	
	asgard.server.Gateway.prototype._onAppStop = function ( info ) {
		
		this.dispatchEvent( new vegas.events.BasicEvent("onAppStop", this))
		
	}


	asgard.server.Gateway.prototype._onConnect = function (client) {
		
		this.dispatchEvent( new vegas.events.BasicEvent("onConnect", this, client))
		
	}

	asgard.server.Gateway.prototype._onDisconnect = function (client) {
		
		this.dispatchEvent( new vegas.events.BasicEvent("onDisconnect", this, client))
		
	}
	
	// ----o Encapsulate
	
	asgard.GATEWAY = new asgard.server.Gateway() ;
	
	// trace ("***** running asgard.server.Gateway") ;
	
}