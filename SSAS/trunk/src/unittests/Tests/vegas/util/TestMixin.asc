// ---o Constructor

Tests.vegas.util.TestMixin = function( name ) {
    buRRRn.ASTUce.TestCase.call( this, name ) ;
}

// ----o Inherit

Tests.vegas.util.TestMixin.prototype = new buRRRn.ASTUce.TestCase() ;
Tests.vegas.util.TestMixin.prototype.constructor = Tests.vegas.util.TestMixin ;

// ----o Public Methods

Tests.vegas.util.TestMixin.prototype.testConstructor = function () {
	
	var mixin = new vegas.util.Mixin() ;
	this.assertTrue(mixin instanceof vegas.util.Mixin, "MIX_01 - constructor failed." ) ;
	
}

Tests.vegas.util.TestMixin.prototype.testInherit = function () {
	
	var mixin = new vegas.util.Mixin() ;
	this.assertTrue(mixin instanceof vegas.core.IRunnable, "MIX_02 - inherit failed." ) ;
	
}

Tests.vegas.util.TestMixin.prototype.testGetAttributes = function () {
	
	var mixin = new vegas.util.Mixin(null, null, ["test"]) ;
	var ar = mixin.getAttributes() ;
	this.assertTrue(ar instanceof Array, "MIX_03 - getAttributes failed : " + ar ) ;
	
}

Tests.vegas.util.TestMixin.prototype.testGetConstructor = function () {
	
	var MyConstructor = function() {} ;
	var mixin = new vegas.util.Mixin( MyConstructor, null, null) ;
	var result = mixin.getConstructor() ;
	this.assertTrue(result instanceof Function, "MIX_04 - getConstructor failed." ) ;
	
}	
	
Tests.vegas.util.TestMixin.prototype.testGetTarget = function () {

	var o = {} ;
	var mixin = new vegas.util.Mixin( null, o, null) ;
	var result = mixin.getTarget() ;
	this.assertEquals(result, o, "MIX_05 - getTarget failed." ) ;

}

Tests.vegas.util.TestMixin.prototype.testRun = function () {

	var MyConstructor = function() {}
	
	MyConstructor.prototype.myMethod = function () {
		return true ;
	}
	
	var o = {} ;
	var mixin = new vegas.util.Mixin( MyConstructor, o, ["myMethod"]) ;
	
	try {
		
		mixin.run() ;
		
	} catch(e) {
		
		this.fail("MIX_06_01 - run failed." ) ;
	}
	
	var result = o.myMethod() ;
	
	this.assertTrue(result, "MIX_06_02 - run failed.") ;

}

Tests.vegas.util.TestMixin.prototype.testSetAttributes = function () {

	var mixin = new vegas.util.Mixin() ;
	mixin.setAttributes(["test"]) ;
	var result = mixin.getAttributes() instanceof Array ;
	this.assertTrue( result, "MIX_07 - setAttributes failed." ) ;

}

Tests.vegas.util.TestMixin.prototype.testSetConstructor = function () {

	var MyConstructor = function() {} ;
	var mixin = new vegas.util.Mixin() ;
	mixin.setConstructor(MyConstructor) ;
	var result = mixin.getConstructor() ;
	this.assertTrue(result instanceof Function, "MIX_04 - getConstructor failed." ) ;

}

Tests.vegas.util.TestMixin.prototype.testSetTarget = function () {

	var o = {} ;
	var mixin = new vegas.util.Mixin() ;
	mixin.setTarget(o) ;
	var result = mixin.getTarget() ;
	this.assertEquals(result, o, "MIX_05 - getTarget failed." ) ;

}