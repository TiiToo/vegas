// ---o Constructor

Tests.vegas.util.TestConstructorUtil = function( name ) {
    buRRRn.ASTUce.TestCase.call( this, name ) ;
}

// ----o Inherit

Tests.vegas.util.TestConstructorUtil.prototype = new buRRRn.ASTUce.TestCase() ;
Tests.vegas.util.TestConstructorUtil.prototype.constructor = Tests.vegas.util.TestConstructorUtil ;

// ----o Public Methods

Tests.vegas.util.TestConstructorUtil.prototype.testCreateBasicInstance = function () {
	var i = vegas.util.ConstructorUtil.createBasicInstance( Array ) ;
	this.assertTrue( i instanceof Array , "CU_01 - static createBasicInstance failed" ) ;
}

Tests.vegas.util.TestConstructorUtil.prototype.testCreateInstance = function () {
	var MyConstructor = function( arg ) {
		this.arg = arg ;
	}
	var i = vegas.util.ConstructorUtil.createInstance( MyConstructor , ["test"] ) ;
	this.assertTrue( i instanceof MyConstructor , "CU_02_01 - static createInstance() failed" ) ;
	this.assertTrue( i.arg == "test" ,  "CU_02_02 - static createInstance failed" ) ;
}

Tests.vegas.util.TestConstructorUtil.prototype.testGetName = function () {
	var o = new vegas.core.CoreObject() ;
	var result = vegas.util.ConstructorUtil.getName(o) ;
	this.assertEquals( result, "CoreObject" ,  "CU_03 - static getName failed : " + result) ;
}

Tests.vegas.util.TestConstructorUtil.prototype.testGetNamespace = function () {
	var o = new vegas.core.CoreObject() ;
	var result = vegas.util.ConstructorUtil.getNamespace(o) ;
	this.assertEquals( result, "vegas.core" ,  "CU_04 - static getNamespace failed : " + result) ;
}

Tests.vegas.util.TestConstructorUtil.prototype.testGetPath = function () {
	var o = new vegas.core.CoreObject() ;
	var result = vegas.util.ConstructorUtil.getPath(o) ;
	this.assertEquals( result, "vegas.core.CoreObject",  "CU_05 - static getPath failed : " + result) ;
}

Tests.vegas.util.TestConstructorUtil.prototype.TestIsImplementationOf = function () {
	var HashMap = vegas.data.map.HashMap ;
	var Map = vegas.data.Map ;
	var result = vegas.util.ConstructorUtil.isImplementationOf( HashMap, Map )
	this.assertTrue (result, "CU_06 - static isImplementationOf failed : " + result )
}

Tests.vegas.util.TestConstructorUtil.prototype.TestIsSubConstructorOf = function () {
	var HashMap = vegas.data.map.HashMap ;
	var Map = vegas.data.Map ;
	var result = vegas.util.ConstructorUtil.isSubConstructorOf( HashMap, Map )
	this.assertTrue (result, "CU_07 - static isSubConstructorOf failed : " + result )
}

