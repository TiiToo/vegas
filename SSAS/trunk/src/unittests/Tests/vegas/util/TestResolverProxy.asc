// ---o Constructor

Tests.vegas.util.TestResolverProxy = function( name ) {
    buRRRn.ASTUce.TestCase.call( this, name ) ;
}

// ----o Inherit

Tests.vegas.util.TestResolverProxy.prototype = new buRRRn.ASTUce.TestCase() ;
Tests.vegas.util.TestResolverProxy.prototype.constructor = Tests.vegas.util.TestResolverProxy ;

// ----o Public Methods

Tests.vegas.util.TestResolverProxy.prototype.testConstructor = function () {
	
	var o = new vegas.util.ResolverProxy() ;
	this.assertTrue(o instanceof vegas.util.ResolverProxy, "RP_01 - constructor failed." ) ;
	
}

Tests.vegas.util.TestResolverProxy.prototype.testInherit = function () {
	
	var o = new vegas.util.ResolverProxy() ;
	this.assertTrue(o instanceof vegas.core.CoreObject, "RP_02 - inherit CoreObject failed." ) ;
	
}

Tests.vegas.util.TestResolverProxy.prototype.testInitialize = function () {
	
	var o1 = {} ;
	vegas.util.ResolverProxy.initialize(o1) ;
	
	var o2 = {} ;
	o2.myMethod = function () {
		return true ;
	}
	
	o1.proxy = o2 ;
	o1.setProxy( o2 ) ;
	
	var b = o1.myMethod() ;
	this.assertTrue(b, "RP_03 - initialize failed." ) ;
	
}

Tests.vegas.util.TestResolverProxy.prototype.testLinkedProxy = function () {
	
	var o1 = new vegas.util.ResolverProxy() ;
	o1.myMethod1 = function () {
		return true ;
	}
	
	var o2 = new vegas.util.ResolverProxy() ;
	o2.myMethod2 = function () {
		return true ;
	}
	
	o1.linkProxy(o2) ;
	
	var b = o1.myMethod2() ;
	this.assertTrue(b, "RP_04 - linkProxy failed." ) ;
	
	var b = o2.myMethod1() ;
	this.assertTrue(b, "RP_04 - linkProxy failed." ) ;
	
}


Tests.vegas.util.TestResolverProxy.prototype.testGetProxy = function () {
	
	var proxy = {} ;
	proxy.myMethod = function () {
		return true ;
	}
	var o = new vegas.util.ResolverProxy(proxy) ;
	this.assertEquals(o.getProxy(), proxy, "RP_05 - getProxy failed." ) ;
	
}
	
Tests.vegas.util.TestResolverProxy.prototype.testSetProxy = function () {
	
	var proxy = {} ;
	proxy.myMethod = function () {
		return true ;
	}
	var o = new vegas.util.ResolverProxy() ;
	o.setProxy(proxy) ;
	var result = o.myMethod() ;
	this.assertTrue(result, "RP_06 - setProxy failed : " + result ) ;
	
}