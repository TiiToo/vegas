// ---o Constructor

Tests.vegas.util.TestMathsUtil = function( name ) {
    buRRRn.ASTUce.TestCase.call( this, name ) ;
}

// ----o Inherit

Tests.vegas.util.TestMathsUtil.prototype = new buRRRn.ASTUce.TestCase() ;
Tests.vegas.util.TestMathsUtil.prototype.constructor = Tests.vegas.util.TestMathsUtil ;

// ----o Public Methods

Tests.vegas.util.TestMathsUtil.prototype.testClamp = function () {
	
	var n ;
	var MathsUtil = vegas.util.MathsUtil ;
		
	n = MathsUtil.clamp(4, 5, 10) ;
	this.assertEquals(n, 5, "MU_01_01 - static clamp() failed : " + n ) ;
	
	n = MathsUtil.clamp(12, 5, 10) ;
	this.assertEquals(n, 10, "MU_01_02 - static clamp() failed : " + n ) ;
		
	n = MathsUtil.clamp(6, 5, 10) ;
	this.assertEquals(n, 6, "MU_01_03 - static clamp() failed : " + n ) ;

	try {
		n = MathsUtil.clamp(null, 5, 10) ;
	} catch (e) {
		var b /*Boolean*/ = e instanceof vegas.errors.IllegalArgumentError ;
		this.assertTrue( b , "MU_01_04 - static clamp() failed" ) ;
	}
	
}

Tests.vegas.util.TestMathsUtil.prototype.testRound = function () {
	
	var n ;
	var MathsUtil = vegas.util.MathsUtil ;
	
	n = MathsUtil.round(4.572525153, 2) ;
	this.assertEquals(n, 4.57, "MU_02_01 - static round() failed : " + n ) ;
	
	n = MathsUtil.round(4.572525153, -1) ;
	this.assertEquals(n, 5, "MU_02_02 - static round() failed : " + n ) ;
		
	try {
		n = MathsUtil.round(null, 5) ;
	} catch (e) {
		this.assertTrue( e instanceof vegas.errors.IllegalArgumentError , "MU_02_03 - static round() failed" ) ;
	}
	
}

Tests.vegas.util.TestMathsUtil.prototype.testSign = function () {
	
	var n ;
	var MathsUtil = vegas.util.MathsUtil ;
		
	n = MathsUtil.sign(-150) ;
	this.assertEquals(n, -1, "MU_03_01 - static sign() failed : " + n ) ;
	
	n = MathsUtil.sign(200) ;
	this.assertEquals(n, 1, "MU_03_02 - static sign() failed : " + n ) ;
		
	n = MathsUtil.sign(0) ;
	this.assertEquals(n, 1, "MU_03_03 - static sign() failed : " + n ) ;

	try {
		n = MathsUtil.sign(null) ;
	} catch (e) {
		var b /*Boolean*/ = e instanceof vegas.errors.IllegalArgumentError ;
		this.assertTrue( b , "MU_03_04 - static sign() failed" ) ;
	}
	
}