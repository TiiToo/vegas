load("unittests/Tests/vegas/logging/errors.asc") ;
load("unittests/Tests/vegas/logging/targets.asc") ;

load("unittests/Tests/vegas/logging/TestAbstractTarget.asc") ;
load("unittests/Tests/vegas/logging/TestILogger.asc") ;
load("unittests/Tests/vegas/logging/TestITarget.asc") ;
load("unittests/Tests/vegas/logging/TestLog.asc") ;
load("unittests/Tests/vegas/logging/TestLogEvent.asc") ;
